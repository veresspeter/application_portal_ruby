<div class="col-10 content">
  <h4 class="title">Pályázatok áttekintése</h4>
  <div class="applications" id="accordion" role="tablist">

  <% @tenders.each do |tender| %>

    <div class="card">
      <div class="card-header" role="tab" id="heading<%= tender.id %>">
        <h5 class="mb-0">
          <a data-toggle="collapse" href="#collapse<%= tender.id %>" aria-expanded="true"
             aria-controls="collapse<%= tender.id %>">
            <h5 class="card-title"><%= tender.title %></h5>
            <h5 class="card-title edit">
              <a class="card-link" href="/apps/<%= tender.id %>/rec">Megnyitás</a>
            </h5>
          </a>
        </h5>
      </div>

      <div id="collapse<%= tender.id %>" class="collapse" role="tabpanel"
           aria-labelledby="heading<%= tender.id %>" data-parent="#accordion">
        <div class="card-body">
          <p><%= tender.article %></p>
          <div class="card-body-footer">
            <h6 class="right-side"><%= tender.owner %></h6>
            <h6><%= tender.publishdate %> - <%= tender.duedate %></h6>
          </div>
        </div>
      </div>
    </div>

  <% end %>

  </div>
</div>