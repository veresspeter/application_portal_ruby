<div class="col-10 content">
  <h4>Példa pályázat</h4>
  <div style="height: 20px"></div>
  <table class="table">
    <thead>
    <tr>
      <th>#</th>
      <th>Teljes név</th>
      <th>Leadott pályázat</th>
      <th>Eredmény</th>
      <th>Bíráló</th>
      <th>Lehetőségek</th>
    </tr>
    </thead>
    <tbody>

    <% @apps.each do |app| %>
      <tr>
        <td><%= app.id %></td>
        <td><%= app.userid %></td>
        <td><a href="" ><%= app.filename %></a></td>
        <td><%= app.score %></td>
        <td><%= app.judgeid %></td>
        <td>
          <% if app.score != nil %>
              <button type="button" class="btn btn-outline-warning upload" data-toggle="modal" data-target="#myModal">Módosít</button>
              <a type="button" href="/user/<%= app.userid %>/apps/del/<%= app.id %>" class="btn btn-outline-danger">Töröl</a>
          <% else %>
              <button type="button" class="btn btn-outline-primary upload" data-toggle="modal" data-target="#myModal">Pontozás</button>
          <% end %>
        </td>
      </tr>
    <% end %>

    </tbody>
  </table>

</div>