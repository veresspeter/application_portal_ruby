<div class="col-10 content">
  <div class="col-sm-6 form-container">
    <h4 class="title">Jelszóemlékeztető</h4>
    <form>

      <div style="height: 20px" ></div>

      <%= form_tag("/forgeted", method: "post") do %>

          <div class="form-group">
            <%= label_tag(:username, "Felhasználónév", class: "col-5" ) %>
            <%= text_field_tag(:username, "", class: "form-control col-7") %>
          </div>

          <div class="form-group">
            <%= label_tag(:email, "Vagy e-mail cím", class: "col-5" ) %>
            <%= text_field_tag(:email, "", class:"form-control col-7") %>
          </div>

          <div style="height: 30px" ></div>


          <%= submit_tag("Küldés", class:"btn btn-block btn-outline-primary") %>
      <% end %>

    </form>
  </div>
</div>