<div class="col-10 content">
  <div class="col-sm-6 form-container">
    <h4 class="title">Adataim</h4>

    <%= form_tag("/user/mod", method: "post") do %>

        <div class="form-group">
          <%= label_tag(:username, "Felhasználónév", class: "col-5" ) %>
          <%= text_field_tag(:username, @user.username, class: "form-control col-7" ) %>
        </div>

        <div class="form-group">
          <%= label_tag(:name, "Teljes név", class: "col-5" ) %>
          <%= text_field_tag(:name, @user.name, class: "form-control col-7" ) %>
        </div>

        <div style="height: 30px" ></div>

        <div class="form-group">
          <%= label_tag(:birthdate, "Születési idő", class: "col-5" ) %>
          <%= text_field_tag(:birthdate, @user.birthdate, class: "form-control col-7" ) %>
        </div>

        <div class="form-group">
          <%= label_tag(:birthplace, "Születési hely", class: "col-5" ) %>
          <%= text_field_tag(:birthplace, @user.birthplace, class: "form-control col-7" ) %>
        </div>

        <div class="form-group">
          <%= label_tag(:mothername, "Anyja neve", class: "col-5" ) %>
          <%= text_field_tag(:mothername, @user.mothername, class: "form-control col-7" ) %>
        </div>

        <div class="form-group">
          <%= label_tag(:address, "Állandó lakcim", class: "col-5" ) %>
          <%= text_field_tag(:address, @user.address, class: "form-control col-7" ) %>
        </div>

        <div style="height: 30px" ></div>

        <div class="form-group">
          <%= label_tag(:email, "E-mail cím", class: "col-5" ) %>
          <%= text_field_tag(:email, @user.email, class: "form-control col-7" ) %>
        </div>

        <div class="form-group">
          <%= label_tag(:phone, "Telefonszám", class: "col-5" ) %>
          <%= text_field_tag(:phone, @user.phone, class: "form-control col-7" ) %>
        </div>

        <div style="height: 30px" ></div>


        <%= submit_tag("Mentés", class:"btn btn-block btn-outline-primary") %>
    <% end %>

  </div>
</div>