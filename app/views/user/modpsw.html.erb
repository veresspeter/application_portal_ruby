<div class="col-10 content">
  <div class="col-sm-6 form-container">
    <h4 class="title">Jelszó lecserélése</h4>

    <%= form_tag("/user/modpsw", method: "post") do %>
      <div class="form-group">
        <%= label_tag(:oldpsw, "Régi jelszó", class: "col-5" ) %>
        <%= password_field_tag(:oldpsw, "", class: "form-control col-7") %>
      </div>

      <div style="height: 30px" ></div>

      <div class="form-group">
        <%= label_tag(:newpsw1, "Új jelszó", class: "col-5" ) %>
        <%= password_field_tag(:newpsw1, "", class:"form-control col-7") %>
      </div>

      <div class="form-group">
        <%= label_tag(:newpsw2, "Új jelszó ismét", class: "col-5" ) %>
        <%= password_field_tag(:newpsw2, "", class:"form-control col-7") %>
      </div>

      <div style="height: 30px" ></div>


      <%= submit_tag("Mentés", class:"btn btn-block btn-outline-primary") %>
    <% end %>

  </div>
</div>